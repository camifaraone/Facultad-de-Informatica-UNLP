Object subclass: #Farola	instanceVariableNames: 'encendida vecinas'	classVariableNames: ''	poolDictionaries: ''	category: 'Objetos1-Farolas-Model'!!Farola methodsFor: 'as yet unclassified' stamp: 'JulianCasaburi 9/1/2018 18:31'!neighbors	"comment stating purpose of message"	^vecinas! !!Farola methodsFor: 'as yet unclassified' stamp: 'JulianCasaburi 9/5/2018 19:48'!cambiarEstado	"comment stating purpose of message"	encendida := encendida not.! !!Farola methodsFor: 'as yet unclassified' stamp: 'JulianCasaburi 9/5/2018 19:56'!pairWithNeighbor: otraFarola	"comment stating purpose of message"		|  fVecinas |	vecinas add: otraFarola.	fVecinas:= otraFarola neighbors.	fVecinas add: self.		"otraFarola neighbors: fVecinas."	! !!Farola methodsFor: 'testing' stamp: 'JulianCasaburi 9/1/2018 18:36'!isOn	"comment stating purpose of message"	^encendida! !!Farola methodsFor: 'initialization' stamp: 'JulianCasaburi 9/1/2018 18:29'!initialize	"comment stating purpose of message"	vecinas := Set new.	encendida := false.! !!Farola methodsFor: 'switching' stamp: 'JulianCasaburi 9/3/2019 12:11'!turnOff	"comment stating purpose of message"	| encendidas |	self isOn		ifTrue: [self cambiarEstado].	encendidas := vecinas select: [ :unaVecina | unaVecina isOn ].	encendidas do: [:unaVecina | unaVecina cambiarEstado].! !!Farola methodsFor: 'switching' stamp: 'JulianCasaburi 9/3/2019 12:13'!turnOn	"comment stating purpose of message"		| apagadas |	self isOn		ifFalse: [self cambiarEstado].	apagadas := vecinas reject: [ :unaVecina | unaVecina isOn ].	apagadas do: [ :unaVecina | unaVecina cambiarEstado ].	! !