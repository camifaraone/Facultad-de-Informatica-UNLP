programa Ejercicio3-2 
areas
  ciudad : AreaC(1,1,100,100)
robots 
  robot tipo1
  variables
    i,num:numero 
  comenzar
    repetir 30
      mover
    derecha
    repetir 5
      mover
      
    num:=4
    EnviarMensaje(num,robot3)
    mover
    mover 
  fin
  
  robot tipo2
  variables
    num:numero 
  comenzar
    num:=6
    EnviarMensaje(num,robot3)
    mover
    mover 
  fin

  robot tipo3
  variables
    aux : numero
  comenzar
    mover
    mover
    mover
    mover
    mover
    RecibirMensaje(aux,robot1)
    Informar(aux)
    RecibirMensaje(aux,robot2)
    Informar(aux)
    mover
    mover
  fin   
variables 
  robot1: tipo1
  robot2: tipo2 
  robot3: tipo3
comenzar 
  AsignarArea(robot1,ciudad)
  AsignarArea(robot2,ciudad)
  AsignarArea(robot3,ciudad)
  Iniciar(robot1, 10, 10)
  Iniciar(robot2, 1, 1 ) 
  Iniciar(robot3, 2, 2 ) 

fin

